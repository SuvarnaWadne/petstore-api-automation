pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SuvarnaWadne/petstore-api-automation.git',
                    credentialsId: 'github-pat-credentials'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat 'mvn clean install'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                bat 'mvn test'
            }
        }

        stage('Publish TestNG Report') {
            steps {
                echo 'Publishing TestNG XML results...'
                publishTestNGResults testResultsPattern: 'test-output/testng-results.xml'
            }
        }

        stage('Archive HTML Report') {
            steps {
                echo 'Archiving HTML TestNG report...'
                archiveArtifacts artifacts: 'test-output/**/*.html', allowEmptyArchive: false
            }
        }
    }

    post {
        always {
            echo "Pipeline Completed"
        }
    }
}
