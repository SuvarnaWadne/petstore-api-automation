pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SuvarnaWadne/petstore-api-automation.git',
                    credentialsId: 'github-pat-credentials'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat 'mvn clean install -DskipTests'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running test cases...'
                bat 'mvn test'
            }
        }

        stage('Publish TestNG Report') {
            steps {
                echo 'Publishing TestNG report...'

                // Publish TestNG results (this enables TestNG Results tab)
                publishTestNGResults patterns: [[pattern: 'test-output/testng-results.xml']]
            }
        }

        stage('Publish JUnit Report (optional backup)') {
            steps {
                // Some TestNG frameworks also output JUnit XML
                junit '**/test-output/*.xml'
            }
        }

        stage('Archive Artifacts (for client)') {
            steps {
                echo 'Archiving screenshots and HTML reports...'

                // Archive HTML reports, screenshots, logs, etc.
                archiveArtifacts artifacts: 'test-output/**', allowEmptyArchive: true
                archiveArtifacts artifacts: 'screenshots/**', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo "Pipeline finished execution"
        }
        success {
            echo "All tests passed. You can download reports from Jenkins Artifacts."
        }
        failure {
            echo "Tests failed. Please review artifacts for debugging."
        }
    }
}
